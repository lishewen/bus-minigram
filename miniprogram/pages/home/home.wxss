.search-bar {
  display: flex;
  background-color: lightgray;
  justify-content: center;
  align-items: center;
  padding: 6px;
}

.search-title {
  padding: 8px 16px 8px 16px;
  border-bottom: 1px solid #f2f2f2;
  font-size: 12px;
  color: #201e1e;
}

.search-inner {
  flex-grow: 1;
  border-radius: 4px;
  background-color: white;
  align-items: center;
  height: 24px;
  display: flex;
}

.search-input {
  flex-grow: 1;
}

.search-hint {
  color: lightgray;
  font-size: 14px;
}

.clear-icon {
  margin-left: auto;
  margin-right: 0;
  padding: 6px;
  flex-shrink: 0;
}

.search-icon {
  margin-left: 6px;
  margin-right: 4px;
}

.search-cancel {
  font-size: 14px;
  flex-shrink: 0;
  color: #007aff;
  margin-left: 6px;
  margin-right: 6px;
}

.search-cell {
  height: 50px;
  border-bottom: 1px solid #f2f2f2;
  background: white;
  display: flex;
  flex-direction: column;
  padding-left: 16px;
  padding-right: 16px;
  justify-content: center;
}

.bg {
  background: white;
  margin-top: 8px;
}

.navstopbg {
  background: #f8fbff;
  padding: 8px 16px 8px 16px;
  display: flex;
  justify-content: space-between;
}

.navroute {
  padding: 8px 16px 8px 16px;
}

.txtstopname {
  color: #4a4a4a;
  font-size: 14px;
}

.viewroute {
  display: flex;
  justify-content: space-between;
}

.nextstation {
  font-size: 12px;
  color: #8e8e93;
  margin-top: 4px;
}

.origin {
  margin-top: 8px;
  font-size: 14px;
  color: #434343;
}

.rightarrow {
  font-size: 12px;
}

.routeName {
  font-size: 16px;
  color: #201e1e;
}
